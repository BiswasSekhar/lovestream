{
    "name": "lovestream-client",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron": "wait-on tcp:5173 && electron .",
        "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
        "electron:build": "vite build && electron-builder"
    },
    "build": {
        "appId": "com.lovestream.app",
        "productName": "Lovestream",
        "directories": {
            "output": "dist_electron"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "win": {
            "target": "nsis"
        }
    },
    "dependencies": {
        "@ffmpeg/ffmpeg": "^0.12.15",
        "@ffmpeg/util": "^0.12.2",
        "buffer": "^6.0.3",
        "process": "^0.11.10",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router-dom": "^7.2.0",
        "simple-peer": "^9.11.1",
        "socket.io-client": "^4.8.1"
    },
    "devDependencies": {
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "@vitejs/plugin-react": "^4.3.4",
        "concurrently": "^9.2.1",
        "electron": "^40.4.0",
        "electron-builder": "^26.7.0",
        "vite": "^6.1.0",
        "vite-plugin-node-polyfills": "^0.25.0",
        "wait-on": "^9.0.4"
    }
}
