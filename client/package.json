{
    "name": "lovestream-client",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "description": "P2P movie streaming and video chat",
    "author": "Biswas",
    "main": "electron/main.cjs",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron": "wait-on tcp:5173 && electron .",
        "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
        "electron:build": "vite build && electron-builder",
        "electron:dir": "vite build && electron-builder --dir"
    },
    "build": {
        "appId": "com.lovestream.app",
        "productName": "Lovestream",
        "npmRebuild": false,
        "directories": {
            "output": "dist_electron"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "public/favicon.ico",
            "forceCodeSigning": false
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "runAfterFinish": true
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "public/logo-256.png",
            "category": "public.app-category.entertainment"
        },
        "linux": {
            "target": "AppImage",
            "icon": "public/logo-256.png"
        }
    },
    "dependencies": {
        "@ffmpeg/core": "^0.12.6",
        "@ffmpeg/core-mt": "^0.12.6",
        "@ffmpeg/ffmpeg": "^0.12.15",
        "@ffmpeg/util": "^0.12.2",
        "@richienb/vlc": "^3.0.2",
        "buffer": "^6.0.3",
        "mp4box": "^2.3.0",
        "process": "^0.11.10",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router-dom": "^7.2.0",
        "render-media": "^4.1.0",
        "simple-peer": "^9.11.1",
        "socket.io-client": "^4.8.1",
        "webtorrent": "^2.8.5"
    },
    "devDependencies": {
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "@vitejs/plugin-react": "^4.3.4",
        "7zip-bin": "^5.2.0",
        "concurrently": "^9.1.2",
        "electron": "34.0.2",
        "electron-builder": "^26.7.0",
        "electron-packager": "^17.1.2",
        "png-to-ico": "^3.0.1",
        "sharp": "^0.34.5",
        "vite": "^6.1.0",
        "vite-plugin-node-polyfills": "^0.25.0",
        "wait-on": "^9.0.4"
    }
}
